{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ES2016",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./build",
    "noEmitOnError": true,
    "esModuleInterop": true,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "paths": {
      "@routes": ["./routes"],
      "@services": ["./services"]
    }
  },
  "include": ["./"],
  "tsc-alias": {
    "resolveFullPaths": true
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "esm": true,
    "experimentalSpecifierResolution": "node",
  }
}
